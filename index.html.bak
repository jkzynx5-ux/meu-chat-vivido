<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Vivido</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Segoe UI', sans-serif; }
        body { background: #121212; color: white; }

        /* TELA DE LOGIN */
        #login-container {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background: #121212; display: flex; align-items: center; justify-content: center;
            z-index: 1000;
        }
        .login-box {
            background: #1e1e1e; padding: 30px; border-radius: 15px;
            text-align: center; width: 90%; max-width: 400px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        }
        .avatar-list { display: flex; justify-content: center; gap: 10px; margin: 20px 0; }
        .avatar-option {
            width: 60px; height: 60px; border-radius: 50%; border: 3px solid transparent;
            cursor: pointer; transition: 0.3s;
        }
        .avatar-option.selected { border-color: #007bff; transform: scale(1.1); }
        input { 
            width: 100%; padding: 12px; margin-bottom: 20px; border-radius: 8px; 
            border: none; background: #333; color: white; outline: none;
        }
        button { 
            width: 100%; padding: 12px; background: #007bff; color: white; 
            border: none; border-radius: 8px; font-weight: bold; cursor: pointer;
        }

        /* ÁREA DO CHAT */
        #chat-container { display: none; height: 100vh; flex-direction: column; }
        #messages { flex: 1; overflow-y: auto; padding: 20px; display: flex; flex-direction: column; gap: 10px; }
        
        .msg-wrapper { display: flex; align-items: flex-start; gap: 10px; margin-bottom: 5px; }
        .msg-avatar { width: 40px; height: 40px; border-radius: 50%; background: #333; }
        .msg-content { background: #2a2a2a; padding: 10px; border-radius: 12px; max-width: 70%; }
        .msg-author { font-size: 0.8em; color: #007bff; font-weight: bold; margin-bottom: 3px; }

        #form { display: flex; padding: 15px; background: #1e1e1e; gap: 10px; }
        #input { flex: 1; padding: 12px; border-radius: 8px; border: none; background: #333; color: white; }
    </style>
</head>
<body>

    <div id="login-container">
        <div class="login-box">
            <h2>Chat Vivido</h2>
            <p style="margin: 10px 0; color: #aaa;">Escolha seu perfil</p>
            <input type="text" id="username" placeholder="Seu apelido...">
            <div class="avatar-list">
                <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=Felix" class="avatar-option selected" data-avatar="Felix">
                <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=Aneka" class="avatar-option" data-avatar="Aneka">
                <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=Jack" class="avatar-option" data-avatar="Jack">
                <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=Luna" class="avatar-option" data-avatar="Luna">
            </div>
            <button onclick="entrar()">Entrar</button>
        </div>
    </div>

    <div id="chat-container">
        <div id="messages"></div>
        <form id="form">
            <input id="input" autocomplete="off" placeholder="Digite uma mensagem..." />
            <button type="submit" style="width: auto; padding: 0 20px;">Enviar</button>
        </form>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        let avatarSelecionado = "Felix";

        // Seleção de Avatar
        document.querySelectorAll('.avatar-option').forEach(img => {
            img.addEventListener('click', () => {
                document.querySelector('.selected').classList.remove('selected');
                img.classList.add('selected');
                avatarSelecionado = img.getAttribute('data-avatar');
            });
        });

        function entrar() {
            const nome = document.getElementById('username').value;
            if(nome.trim()) {
                socket.emit('novo-usuario', { nome, avatar: avatarSelecionado });
                document.getElementById('login-container').style.display = 'none';